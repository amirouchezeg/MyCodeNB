 public class openFilePDf extends Thread {
        public void run(){
            File f=new File("barcode Report.pdf");
            try {            
                Desktop.getDesktop().open(f);
            } catch (IOException ex) {
                Logger.getLogger(testClass.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
    }


